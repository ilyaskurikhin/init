[user]
	name = Ilya Skurikhin
	email = ilya@skurikhin.ch
[core]
	autocrlf = input
	safecrlf = true
[push]
	default = simple
[merge]
	tool = vimdiff
        conflictstyle = diff3 
[color]
        ui = auto
[color "branch"]
        current = yellow
        local = yelow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = green
        changed = yellow bold
        untracked = cyan
        deleted = red
[format]
        pretty = %C(yellow)%h%Creset %C(bold blue)%an <%ae>%Creset %s %C(green bold)(%cr)%Creset %C(green)(%ci)%Creset%C(yellow bold)%d%Creset

